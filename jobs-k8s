apiVersion: batch/v1
kind: Job
metadata:
  name: node-app-job2
spec:
  completions: 10 #this is the max number of pod doing your job
  parallelism: 2 ###in two sets
  template:
    spec:
      containers:
        - name: node-app-job
          image: alpine
          command: ["echo","welcome to my node app1"]
      restartPolicy: Never #onfailure
